from flask import Flask, render_template, request
import os

app = Flask(__name__)
app.config['UPLOAD_FOLDER'] = "uploads"
os.makedirs(app.config['UPLOAD_FOLDER'], exist_ok=True)

@app.route("/", methods=["GET", "POST"])
def index():
    # Initialize result as empty dictionary
    result = {}
    error = None

    if request.method == "POST":
        resume = request.files.get("resume")
        jd = request.form.get("jd")

        if not resume or not jd:
            error = "Please upload a resume and paste a job description."
        else:
            # Save resume
            resume_path = os.path.join(app.config['UPLOAD_FOLDER'], resume.filename)
            resume.save(resume_path)

            # Simulate AI result
            result = {
                "score": 78,
                "missing_skills": ["Docker", "Kubernetes", "AWS"],
                "explanation": (
                    "Your resume matches most of the requirements. "
                    "Focus on improving skills in Docker, Kubernetes, and AWS to increase your chances."
                )
            }

    # Make sure result always has the keys to prevent template errors
    safe_result = {
        "score": result.get("score", 0),
        "missing_skills": result.get("missing_skills", []),
        "explanation": result.get("explanation", "")
    }

    return render_template("index.html", result=safe_result, error=error)

if __name__ == "__main__":
    app.run(debug=True)
